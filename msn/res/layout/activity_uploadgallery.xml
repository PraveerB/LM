<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/screen_1_base"
    tools:context=".UploadGalleryActivity" >
    
    

    <ImageView
        android:id="@+id/showGalleryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="50dp"
        android:clickable="true"
        android:src="@drawable/gallery" />
    
    
    <ImageView
        android:id="@+id/uploadBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/showGalleryBtn"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/showGalleryBtn"
        android:clickable="true"
        android:src="@drawable/upload" />

<RelativeLayout
    android:id="@+id/popupLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignRight="@+id/uploadBtn"
    android:background="@drawable/popup_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:visibility="invisible" >

    <ImageView
        android:id="@+id/whitebg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/whitebg" />

    <ImageView
        android:id="@+id/facebookSelectPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phonegallery"
        android:layout_centerVertical="true"
        android:src="@drawable/facebookgallery"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/phonegallery"
        android:layout_alignRight="@+id/whitebg"
        android:layout_marginBottom="10dp"
        android:src="@drawable/close" />

    <ImageView
        android:id="@+id/phonegallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/facebookSelectPhoto"
        android:layout_alignRight="@+id/whitebg"
        android:layout_marginRight="10dp"
        android:src="@drawable/phonegallery" />

    <ImageView
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/facebookSelectPhoto"
        android:layout_below="@+id/facebookSelectPhoto"
        android:src="@drawable/cameragallery" />

</RelativeLayout>

</RelativeLayout>